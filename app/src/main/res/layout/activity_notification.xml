<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lt.vs.come.views.NotificationActivity">
    <Button
        android:id="@+id/notification_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通的Notification"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/notification_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="折叠的Notification"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/notification_fly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="悬挂的Notification"
        android:textAllCaps="false"/>
</LinearLayout>
