<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_function"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lt.vs.come.views.FunctionActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/text_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView相关"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/only_listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ListView列表展示"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/music_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—音乐播放器—" />
            <Button
                android:id="@+id/movie_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—视频播放器—" />
            <Button
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3种Notification样式"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/event_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义View"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/passwordinput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="passwordinput"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/refresh_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刷新，加载"/>

            <com.lt.vs.come.custom.Flayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#cccccc">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#00ff00"
                    android:text="11111"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11112"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11113"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11114"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11115"/>
            </com.lt.vs.come.custom.Flayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
